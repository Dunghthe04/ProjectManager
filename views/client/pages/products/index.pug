extends ../../layout/default.pug

block main
    .container.my-3 
      .row 
        .col-12 
          .box-head 
            h2.inner-text Danh sách sản phảm

      .row 
        each item in Products 
          .col-4.mb-3 
           .product-item 
             .inner-image 
               img(
                src=item.thumbnail
                alt=item.title
                )        
             .inner-content 
               h3.inner-title 
                a(
                  href=`/product/detail/${item.slug}`
                ) #{item.title}
               .inner-price-new #{item.priceNew}
               .inner-price-old <del>#{item.price}</del>
               .inner-discount #{item.discountPercentage}