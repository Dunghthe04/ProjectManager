extends ../../layout/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug
block main 
    +alert-error(5000)
    +alert-success(5000)
    h1(class="mb-4") Phân quyền
     //-ném record (chứa thông tin ở database -> chứa các permission ->js lấy để tick checkbox)
     if(records)
      div(data-record=records)
     div(class="text-right")
       button(
           type="submit"
           class="btn btn-primary mb-3"
           button-submit
           ) Cập nhập
     table(
          class="table table-hover table-sm"
          table-permission
          )
          thead 
            tr 
              th Tính năng 
              each item in records
               th(class="text-center") #{item.title}
          tbody
            tr(data-name="products-category_id" class="d-none")
              td
              each item in records
                td(class="text-center")
                  input(type="text" value=item.id)
            //-Danh mục sản phẩm   
            tr 
              td(colspan="4")
                b(style="color:red") Danh mục sản phẩm
            tr(data-name="products-category_view")
              td Xem 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products-category_add")
              td Thêm mới 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products-category_edit")
              td Chỉnh sửa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products-category_delete")
              td Xóa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")

            //-Sản phẩm  
            tr 
              td(colspan="4")
                b(style="color:red") Sản phẩm
            tr(data-name="products_view")
              td Xem 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products_add")
              td Thêm mới 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products_edit")
              td Chỉnh sửa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="products_delete")
              td Xóa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            //-Nhóm quyền  
            tr 
              td(colspan="4")
                b(style="color:red") Nhóm quyền
            tr(data-name="permission_view")
              td Xem 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="permission_add")
              td Thêm mới 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="permission_edit")
              td Chỉnh sửa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")
            tr(data-name="permission_delete")
              td Xóa 
              td(class="text-center")
                input(type="checkbox")
              td(class="text-center")
                input(type="checkbox")              
    //- sau khi laayd được dữ liệu chọn checkbox -> đẩy sang backend bằng form
    form(
        id="form-change-permission"
        method="POST"
        action=`${prefixAdmin}/roles/permission?_method=PATCH`
    ) 
      div(class="form-group" class="d-none")
        input(
            type="text"
            class="form-control"
            name="permissions"
        )           
    script(src="/admin/js/role.js")