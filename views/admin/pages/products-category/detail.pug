extends ../../layout/default.pug
block main
   if(record.title)
     h2(class="mb-4") #{record.title}
   if(record.thumbnail)
     div(class="mb-4")
        img(
            src=record.thumbnail
            style="width: 200px"
        )
   if(record.status)
     div(class="mb-4")
       if(record.status=="active")
          span(class="badge badge-success") Hoạt động
       if(record.status=="inactive")
          span(class="badge badge-danger") Dừng hoạt động   
   if(record.position)
     div(class="mb-4") Vị trí: <b>#{record.position}</b>
   if(record.description)
     div(class="mb-4") Mô tả: !{record.description}   
   a(
      href=`${prefixAdmin}/products/edit/${record.id}`
      class="btn btn-warning btn-sm"
      ) Sửa       
   script(src="/admin/js/product.js")