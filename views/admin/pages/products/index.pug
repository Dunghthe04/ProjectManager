extends ../../layout/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/searchForm.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/alert.pug
block main 
  +alert-success(5000)
  h1 Trang danh sách các sản phẩm 
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm 
    .card-body 
      .row
       .col-6
         +filterStatus(filterStatus)
       .col-6 
         +searchForm(keyword)


  .card.mb-3
    .card-header Danh sách
    .card-body
        .row
          .col-9
            +formChangeMulti(`${prefixAdmin}/products/change-multi?_method=PATCH`)
            //- Truyền thẳng path vào luôn vì nó ko biến động nào cả

            a(
              href=`${prefixAdmin}/recycle`
              class="btn btn-secondary"
              recycle Item
            ) Recycle Item
          .col-3
            a(
              href=`${prefixAdmin}/products/create`
              class="btn btn-outline-success"
              create-item
            ) Create New Product  
        table(
          class="table table-hover table-sm"
          check-box-multi
          )
          thead 
           tr 
            th  
              input(type="checkbox" name="checkall")   
            th STT 
            th Hình ảnh 
            th Tiêu đề
            th Giá
            th Vị trí
            th Trạng thái 
            th Hành động
          tbody
           each item ,index in products 
            tr  
                td 
                  input(
                    type="checkbox"
                    name="id"
                    value=item.id
                  )
                td #{index+1}
                td
                    img(src=item.thumbnail
                        alt=item.title
                        width="100px"
                        height="auto")
                td #{item.title}
                td #{item.price}$
                td 
                  input(
                    type="Number"
                    value=item.position 
                    style="width: 60px"
                    min="1"
                    name="position"
                  )
                td 
                    if(item.status=="active")
                     a(href="javascript:;"
                     data-status=item.status
                     data-id=item.id 
                     button-change-status 
                     class="badge badge-success") Hoạt động
                    else         
                     a(href="javascript:;"
                      data-status=item.status
                      data-id=item.id 
                      button-change-status
                      class="badge badge-danger") Ngưng hoạt động
                td 
                    a(
                      href=`${prefixAdmin}/products/edit/${item.id}`
                      class="btn btn-warning btn-sm"
                    ) Sửa
                    button(
                    class="btn btn-danger btn-sm ml-1"
                    data-id=item.id 
                    delete-item
                    ) Xóa

  +pagination(pagination)
  //- tạo form ảo -> xíu lấy đc status id của sp đó -> tạo ra 1 action -> gán vào action form -> gửi đi
  //-tạo action động vì id thay đổi,...
  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path=`${prefixAdmin}/products/change-status`
  )
  //- Tạo form ảo -> sử lý bên js lấy id của button click -> tạo action mới -> gán form -> link đến router-> controller xử lý xóa
  form(
    action=""
    method="POST"
    id="form-delete-item"
    data-path=`${prefixAdmin}/products/delete`
  )
  
  script(src="/admin/js/product.js")
    